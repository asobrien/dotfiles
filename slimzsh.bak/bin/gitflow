#!/usr/bin/env python

"""
    gitflow
    ~~~~~~~
    Simple wrappers to make working with our gitflow model a little easier.

"""

import os
import sys
import argparse


def update_develop():
     os.system("git fetch origin && "
               "git checkout develop && "
               "git pull --rebase=preserve origin develop")

def main():
    parser = argparse.ArgumentParser(description="GitFlow for provisioning.")
    parser.add_argument('-u', '--update', action='store_true', default=False)

    args = parser.parse_args()

    if args.update:
        update_develop()
        return

    return sys.exit(1)


if __name__ == '__main__':
    main()

